---
export interface Props {
  level: 1 | 2 | 3 | '1' | '2' | '3';
}

const { level } = Astro.props;
const Tag = `h${level}`;
---

<Tag><slot /></Tag>

<style>
  h1 {
    font-size: 3.6rem;
    letter-spacing: 0.5px;
    font-weight: 900;
    color: var(--dark);
  }
  h2 {
    font-size: 3rem;
    line-height: 1.3;
    letter-spacing: -0.25px;
    font-weight: 700;
    color: var(--dark-gray);
  }
</style>